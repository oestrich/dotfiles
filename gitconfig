[core]
    editor = nvim
    excludesfile = /Users/eric/.gitignore_global
    quotepath = false
    commitGraph = true
    commentChar = auto

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = cyan


[alias]
    full-stash = stash --include-untracked
    ll = log --oneline -n 5
    trim = !git branch --merged | grep -v '*' | xargs -n 1 git branch -d
[push]
    default = simple
[interactive]
    singleKey = no

[pull]
    rebase = false

[gc]
    writeCommitGraph = true
[rebase]
    autosquash = true
[init]
    defaultBranch = main

[user]
    name = Eric Oestrich
    email = eric@oestrich.org

[core]
    editor = vim
    excludesfile = /Users/eric/.gitignore_global
	quotepath = false
	commitGraph = true

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    full-stash = stash --include-untracked
    ll = log --oneline -n 5
    trim = !git branch --merged | grep -v '*' | xargs -n 1 git branch -d
[push]
    default = simple
[interactive]
    singleKey = no

[pull]
	rebase = false

[gc]
	writeCommitGraph = true
